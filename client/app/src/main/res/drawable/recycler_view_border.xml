<?xml version="1.0" encoding="utf-8"?>
<!--
  This drawable defines the visual style for the border around the RecyclerView.
  It's a shape drawable that creates a rectangle with a light gray stroke (the border)
  and rounded corners to match the overall app design.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <stroke
        android:width="1dp"
        android:color="#E5E7EB" /> <!-- A light gray color for the border -->
    <corners
        android:radius="8dp" /> <!-- Rounded corners -->
    <solid
        android:color="#F9FAFB" /> <!-- A very light gray background color -->
</shape>