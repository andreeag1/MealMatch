<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="My Profile"
            android:textColor="@color/brand_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Avatar -->
        <TextView
            android:id="@+id/avatarCircle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/user_profile_pic_placeholder"
            android:text=""
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/brand_primary"
            android:layout_marginTop="12dp" />

        <!-- Name and Email -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#888888" />

        <!-- Preferences Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/brand_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Foodie Preferences:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prefCuisines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="• Cuisines:" />

            <TextView
                android:id="@+id/prefDietary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Dietary:" />

            <TextView
                android:id="@+id/prefAmbiance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Ambiance:" />

            <TextView
                android:id="@+id/prefBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Budget:" />

            <Button
                android:id="@+id/editPreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/brand_primary"
                android:text="✏️ Edit Preferences"
                android:textColor="@color/brand_text_primary" />
        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/brand_primary"
            android:text="🚪 Logout"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
