<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">

        <!-- Title -->
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="My Profile"
            android:textColor="#7B61FF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Avatar Circle -->
        <TextView
            android:id="@+id/avatarCircle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/userprofilepicplaceholder"
            android:text=""
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />

        <!-- Name and Email -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test User"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testuser@example.com"
            android:textSize="14sp"
            android:textColor="#888888" />

        <!-- Points -->
        <TextView
            android:id="@+id/userPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ… 1250 Points"
            android:textSize="16sp"
            android:textColor="#FFC107"
            android:layout_marginTop="8dp" />

        <!-- Preferences Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#F2F3F4"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Foodie Preferences:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prefCuisines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="â€¢ Cuisines: Italian, Japanese, Mexican" />

            <TextView
                android:id="@+id/prefDietary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Dietary: Vegetarian-friendly, Gluten-free options" />

            <TextView
                android:id="@+id/prefAmbiance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Ambiance: Casual, Trendy" />

            <TextView
                android:id="@+id/prefBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Budget: $$" />

            <Button
                android:id="@+id/editPreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                tools:layout_editor_absoluteX="0dp"
                android:backgroundTint="#F2F3F4"
                android:text="âœï¸ Edit Preferences"
                android:textColor="#7B61FF" />
        </LinearLayout>


    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/btnLeaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFA000"
        android:text="ðŸ† View Leaderboards"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="475dp"
        tools:ignore="MissingConstraints" />



    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9E9E9E"
        android:text="âš™ï¸ App Settings"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="547dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:text="ðŸšª Logout"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="609dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>