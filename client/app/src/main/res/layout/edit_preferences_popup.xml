<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/inputCuisine"
            android:hint="Cuisine Preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/inputDietary"
            android:hint="Dietary Preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/inputAmbiance"
            android:hint="Ambiance Preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Budget Preference Dropdown Menu -->
        <Spinner
            android:id="@+id/inputBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </LinearLayout>
</ScrollView>
