<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Page Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mealmatch.ui.HomeFragment"
        android:label="@string/home_page_label"
        tools:layout="@layout/fragment_home" />

    <!-- Match Page Fragment -->
    <fragment
        android:id="@+id/matchFragment"
        android:name="com.mealmatch.ui.match.SoloMatchFragment"
        android:label="@string/match_page_label"
        tools:layout="@layout/fragment_solo_match" />

    <!-- Friends Page Fragment -->
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.mealmatch.ui.friends.FriendsFragment"
        android:label="@string/friends_page_label"
        tools:layout="@layout/fragment_friends" />

    <!-- Map Page Fragment -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.mealmatch.ui.map.MapFragment"
        android:label="@string/map_page_label"
        tools:layout="@layout/fragment_map" />

    <!-- Profile Page Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.mealmatch.ui.ProfileFragment"
        android:label="@string/profile_page_label"
        tools:layout="@layout/fragment_profile" />
</navigation>